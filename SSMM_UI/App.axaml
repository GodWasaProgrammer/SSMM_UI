		</FluentTheme>
			<StyleInclude Source="avares://IconPacks.Avalonia/Icons.axaml" />

			<!-- Använd Brush-resurserna för Background/BorderBrush -->
			<Style Selector="Border.card">
				<Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
				<Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="CornerRadius" Value="6"/>
				<Setter Property="Padding" Value="15"/>
				<Setter Property="Margin" Value="0 0 0 15"/>
			</Style>

			<!-- Använd Brush-resurserna för Background och Color-resursen för Foreground -->
			<Style Selector="Button.primary">
				<Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
				<Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
				<Setter Property="FontWeight" Value="Bold"/>
				<Setter Property="CornerRadius" Value="4"/>
				<Setter Property="Width" Value="180"/>
				<Setter Property="Height" Value="40"/>
			</Style>

			<Style Selector="Button.success">
				<Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
				<Setter Property="Foreground" Value="{DynamicResource WhiteColor}"/>
			</Style>

			<Style Selector="Button.danger">
				<Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
				<Setter Property="Foreground" Value="{DynamicResource WhiteColor}"/>
			</Style>

			<!-- Använd Color-resursen direkt -->
			<Style Selector="ListBoxItem:pointerover">
				<Setter Property="Background">
					<Setter.Value>
						<SolidColorBrush Color="{DynamicResource BorderColor}" Opacity="0.3"/>
					</Setter.Value>
				</Setter>
			</Style>

			<Style Selector="Button.listItemButton">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderThickness" Value="0"/>
				<Setter Property="Padding" Value="0"/>
				<Setter Property="HorizontalContentAlignment" Value="Left"/>
				<Setter Property="HorizontalAlignment" Value="Stretch"/>
			</Style>
		</Application.Styles>
