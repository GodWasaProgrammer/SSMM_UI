<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="450"
		xmlns:local="clr-namespace:SSMM_UI.ViewModel"
        x:Class="SSMM_UI.Views.PurgeTokenView"
		x:DataType="local:PurgeTokenViewModel"
		SizeToContent="WidthAndHeight"
        Title="PurgeTokenView">
	<Border Classes="card" Margin="20">
		<StackPanel Spacing="15">
			<!-- Header -->
			<TextBlock  Text="Purge Tokens" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
			<StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
				<!-- Genererad lista -->
				<ItemsControl ItemsSource="{Binding AuthProviders}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Classes="card" Margin="20">
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
							<TextBlock Text="{Binding}" Margin="20"/>
								<Button Content="Purge"
										Command="{Binding $parent[ItemsControl].DataContext.PurgeSpecifiedTokenCommand}"	
										CommandParameter="{Binding}" />
							</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>
