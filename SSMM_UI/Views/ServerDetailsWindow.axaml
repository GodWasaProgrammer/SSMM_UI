<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSMM_UI"
        mc:Ignorable="d"
        x:Class="SSMM_UI.ServerDetailsWindow"
        x:DataType="local:ServerDetailsWindow"
        Title="RTMP Servers" Width="400" Height="450">

	<StackPanel>
		<TextBlock Text="{Binding ServiceGroup.ServiceName}"
                  FontWeight="Bold" FontSize="18" Margin="10"/>

		<ListBox x:Name="RTMPServerList"
                 ItemsSource="{Binding ServiceGroup.Servers}"
                 SelectedItem="{Binding SelectedServer, Mode=TwoWay}"
                 Margin="10" Height="300">
			<ListBox.ItemTemplate>
				<DataTemplate x:DataType="local:RtmpServerInfo">
					<TextBlock Text="{Binding ServerName}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<Button Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
			<Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
		</StackPanel>
	</StackPanel>
</Window>