<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SSMM_UI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SSMM_UI.ServerDetailsWindow"
		x:DataType="local:RtmpServiceGroup"
        Title="RTMP Servers" Width="400" Height="400">

	<StackPanel>
		<TextBlock Text="{Binding ServiceName}" FontWeight="Bold" FontSize="18" Margin="10"/>

		<ListBox x:Name="RTMPServiceList"
                 ItemsSource="{Binding Servers}"
                 DisplayMemberBinding="{Binding ServerName}"
                 Margin="10" />
	</StackPanel>
</Window>
