<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="SSMM_UI.Views.SecretsAndKeysView">

	<ScrollViewer>
		<StackPanel Margin="20" Spacing="20">

			<!-- API Keys -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="API Keys" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ExampleKey1" FontWeight="Bold"/>
							<TextBlock Text="Value123" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ExampleKey2" FontWeight="Bold"/>
							<TextBlock Text="Value456" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Consumer Keys -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Consumer Keys" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ConsumerKeyA" FontWeight="Bold"/>
							<TextBlock Text="ABC123" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ConsumerKeyB" FontWeight="Bold"/>
							<TextBlock Text="XYZ789" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Consumer Secrets -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Consumer Secrets" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="SecretKey1" FontWeight="Bold"/>
							<TextBlock Text="******" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="SecretKey2" FontWeight="Bold"/>
							<TextBlock Text="******" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Access Tokens -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Access Tokens" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="AccessToken1" FontWeight="Bold"/>
							<TextBlock Text="TokenValue123" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="AccessToken2" FontWeight="Bold"/>
							<TextBlock Text="TokenValue456" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Access Secrets -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Access Secrets" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="AccessSecret1" FontWeight="Bold"/>
							<TextBlock Text="******" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="AccessSecret2" FontWeight="Bold"/>
							<TextBlock Text="******" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Client Ids -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Client Ids" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ClientId1" FontWeight="Bold"/>
							<TextBlock Text="CID-111" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="ClientId2" FontWeight="Bold"/>
							<TextBlock Text="CID-222" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Account Names -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Account Names" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="MainAccount" FontWeight="Bold"/>
							<TextBlock Text="user@example.com" Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="BackupAccount" FontWeight="Bold"/>
							<TextBlock Text="backup@example.com" Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<!-- Webhooks -->
			<Border Classes="card">
				<StackPanel>
					<TextBlock Text="Webhooks" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
					<StackPanel Spacing="5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="DiscordWebhook" FontWeight="Bold"/>
							<TextBlock Text="https://discord.com/api/webhooks/..." Classes="secondary"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="SlackWebhook" FontWeight="Bold"/>
							<TextBlock Text="https://hooks.slack.com/..." Classes="secondary"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

		</StackPanel>
	</ScrollViewer>
</UserControl>

