<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
	         xmlns:local="clr-namespace:SSMM_UI.ViewModel"
	         xmlns:Views="clr-namespace:SSMM_UI.Views"
			 x:DataType="local:OutputViewModel"
             x:Class="SSMM_UI.Views.OutPutView">

	<Grid RowDefinitions="Auto,Auto,Auto">

		<Border Classes="card">
			<Grid>
				<TextBlock Grid.Row="0" Text="{Binding Header}"></TextBlock>
				<ListBox Grid.Row="2"
						ItemsSource="{Binding LogMessages}"
						 SelectedItem="{Binding SelectedMessage}"
						 Height="200"
						 Width="400"
						 FontFamily="Consolas, Courier New"
						 BorderThickness="0"
						 Padding="10"
						 Margin="0,30,0,0"
				Opacity="1"/>
			</Grid>
		</Border>
		<Button Grid.Row="1"
				Content="Restart"
				Command="{Binding RestartProcessCMD}"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				Margin="10,6,0,0"/>
	</Grid>
</UserControl>
