<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
	         xmlns:local="clr-namespace:SSMM_UI.ViewModel"
	         xmlns:Views="clr-namespace:SSMM_UI.Views"
			 x:DataType="local:OutputViewModel"
             x:Class="SSMM_UI.Views.OutPutView"
			 Background="{DynamicResource BackGroundColor}">

		<Border Classes="card">
			<Grid>
				<TextBlock Text="{Binding Header}"></TextBlock>
				<!-- ListBox med ändrad opacitet och bättre utrymmesanvändning -->
				<ListBox ItemsSource="{Binding LogMessages}"
						 SelectedItem="{Binding SelectedMessage}"
						 Height="200"
						 Width="400"
						 FontFamily="Consolas, Courier New"
						 BorderThickness="0"
						 Background="{DynamicResource BorderColor}"
						 Foreground="{DynamicResource PrimaryTextColor}"
						 Padding="10"
						 Margin="0,30,0,0"
				Opacity="1"/>
			</Grid>
		</Border>
	
</UserControl> 
