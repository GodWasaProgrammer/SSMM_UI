<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:SSMM_UI.ViewModel"
			 x:DataType="vm:SocialPosterLoginViewModel"
             x:Class="SSMM_UI.Views.SocialPosterLoginView">
	<StackPanel>
		<Border Classes="card">
			<StackPanel>
				<TextBlock Text="Logins" HorizontalAlignment="Center" Classes="secondary" Margin="0 0 0 5"/>
				<Button Content="X" Classes="primary" HorizontalAlignment="Center"
						Command="{Binding LoginWithXCommand}"/>
				<TextBlock Text="{Binding XLoginStatus}" Classes="secondary" Margin="0 10 0 0"/>
				<Button Content="Facebook" Classes="primary" HorizontalAlignment="Center"
						Command="{Binding LoginWithFacebook}"/>
				<TextBlock Text="{Binding FacebookLoginStatus}" Classes="secondary" Margin="0 10 0 0"/>
			</StackPanel>
		</Border>
	</StackPanel>
</UserControl>
