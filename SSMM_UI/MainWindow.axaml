<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        xmlns:local="clr-namespace:SSMM_UI"
        x:Class="SSMM_UI.MainWindow"
        x:DataType="local:MainWindow"
        Title="SSMM_UI" Width="1920" Height="1080">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Left Column -->
		<StackPanel Grid.Column="0" Margin="10" HorizontalAlignment="Left">
			<!-- Video Preview -->
			<local:MyVideoView x:Name="RtmpIncoming" Width="200" Height="150" IsVisible="False" />

			<!-- Available Services -->
			<TextBlock Text="Stream Services" FontWeight="Bold" Margin="0,0,0,5"/>
			<ListBox x:Name="RTMPServiceList"
                     ItemsSource="{Binding RtmpServiceGroups}"
                     SelectionChanged="RTMPServiceList_SelectionChanged"
                     Height="300" Width="150">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding ServiceName}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

			<!-- Selected Services Section -->
			<StackPanel Margin="0,10,0,0">
				<TextBlock Text="Selected Services" FontWeight="Bold" Margin="0,0,0,5"/>
				<ListBox x:Name="SelectedServices"
                         Height="250"
                         Width="150"
                         ItemsSource="{Binding SelectedServicesToStream}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel>
								<TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
								<TextBlock Text="{Binding FullUrl}" FontSize="10" TextWrapping="Wrap"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
				<Button Content="Remove Selected"
                        Width="150"
                        Margin="0,5,0,0"
                        Click="RemoveSelectedService"/>
			</StackPanel>
		</StackPanel>

		<!-- Right Column -->
		<StackPanel Grid.Column="1" Margin="10">
			<!-- Stream Controls -->
			<Button Content="Start Stream"
                    Width="150"
                    Margin="0,10"
                    Click="StartStream"/>
			<Button Width="150" Margin="0,10" Click="StopStreams">Stop Streams</Button>
			<Button x:Name="ToggleStreamButton"
                    Content="Start Receiving"
                    Width="150"
                    Margin="0,10"
                    Click="ToggleReceivingStream"/>

			<TextBlock x:Name="ReceivingStatus"
                       Text="Stream stopped"
                       Margin="0,0,0,10"/>

			<!-- Status Indicators -->
			<TextBlock x:Name="StreamStatusText"
                       Text="Stream status: Unknown"
                       FontWeight="Bold"
                       Margin="0,10,0,0" />

			<TextBlock x:Name="ServerStatusText"
                       Text="RTMP server: Unknown"
                       FontWeight="Bold" />

			<!-- Logs -->
			<TextBlock Text="Logs"
                       FontWeight="Bold"
                       Margin="0,10,0,0"/>

			<TextBox x:Name="LogOutput"
                     AcceptsReturn="True"
                     Height="100"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
		</StackPanel>
	</Grid>
</Window>



