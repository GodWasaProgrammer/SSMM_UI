<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SSMM_UI.MainWindow"
        Title="SSMM_UI">
	<StackPanel Margin="10">
		<TextBlock Text="RTMP Destinationer" FontWeight="Bold"/>
		<ListBox x:Name="DestinationsList" Height="150"/>

		<StackPanel Orientation="Horizontal" Margin="0,10">
			<TextBox x:Name="NewUrlBox" Width="400" Watermark="rtmp://..."/>
			<Button Content="Add" Margin="10,0,0,0" Width="100"/>
		</StackPanel>

		<Button Content="Start Stream" Width="150" Margin="0,10"/>

		<TextBlock Text="Logs" FontWeight="Bold" Margin="0,10,0,0"/>
		<TextBox x:Name="LogOutput" AcceptsReturn="True" Height="100" IsReadOnly="True"/>

		<!-- Här lägger vi in VideoView från LibVLCSharp -->
		<vlc:VideoView x:Name="VideoView" Width="640" Height="360" Margin="0,10,0,0"/>
	</StackPanel>
</Window>

